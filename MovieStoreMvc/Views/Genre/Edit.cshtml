@model MovieStoreMvc.Models.Domain.Genre
 
@{
    ViewData["Title"] = "Edit";
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*  <title>login</title>*@

    <style>

        form {
            border: 3px solid #f1f1f1;
            width: 60%;
            margin: auto;
            margin-top: -12%;
        }

        input[type=text] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            background-color: #aa048b;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 20%;
        }


        .container {
            padding: 16px;
        }

        .msg {
            padding: 0px;
        }


        .err {
            color: red;
        }
    </style>

</head>
<form asp-action="Edit" method="post">
    <h2 class="pb-10">Update Genre</h2>
       <input type="hidden" class="input" asp-for="Id" />
    <div class="container">
        <label asp-for="GenreName">Genre Name</label>
        <input type="text" asp-for="GenreName" placeholder="Enter Genre Name">
        <div class="msg">
            <span class="err" asp-validation-for="GenreName"> </span>
        </div>




        @if (TempData["msg"] != null)
        {
            <div class="msg">
                <span class="err">@TempData["msg"] </span>
            </div>
        }

        <button type="submit">Update </button>

        <a class="btn btn-sec" href="/Genre/GenreList">All Records</a>

    </div>
</form>

