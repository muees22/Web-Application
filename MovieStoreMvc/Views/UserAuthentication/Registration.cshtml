@model MovieStoreMvc.Models.DTO.RegistrationModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>

    <style>

        form {
            border: 3px solid #f1f1f1;
            width: 60%;
            margin: auto;
            margin-top: 3%;
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            background-color: #aa048b;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }

        .container {
            padding: 16px;
        }

        .msg {
            padding: 0px;
        }


        .err {
            color: red;
        }
    </style>

</head>
<body>
   
    <form asp-action="Registration" method="post">
        <h2>&nbsp;&nbsp;Registration</h2>
        <div class="container">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" placeholder="Enter Name">
            <div class="msg">
             <span class="err" asp-validation-for="Name"></span>
            </div>

           
             <label asp-for="UserName">User Name</label>
             <input type="text" asp-for="UserName" placeholder="Enter User Name">
             <div class="msg">
              <span class="err" asp-validation-for="UserName"></span>
             </div>


            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" placeholder="Enter Email">
            <div class="msg">
             <span class="err" asp-validation-for="Email"></span>
            </div>


            <label asp-for="Password"><b>Password</b></label>
            <input type="password" asp-for=Password placeholder="Enter Password">
            <div class="msg">
            <span asp-validation-for="Password" class="err"></span>
            </div>



            <label asp-for="PasswordConfirm"><b>Confirm Password</b></label>
            <input type="password" asp-for=PasswordConfirm placeholder="Confirm Password">
             <div class="msg">
              <span asp-validation-for="PasswordConfirm" class="err"></span>
              </div>


            @if (TempData["msg"] != null)
            {
                <div class="msg">
                    <span class="err">@TempData["msg"] </span>
                </div>
            }

            <button type="submit" class="btn btn-primary">Signup</button>
            <a class="text-alert" href="/UserAuthentication/Login">Login</a>
        
        </div>
     </form>

</body>
</html>



